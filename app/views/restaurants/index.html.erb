
<div class="container p-3 text-center" style="height=100px">
   <h1 class="display-3"> <%= @current_cuisine.capitalize %> Resturants for your date </h1>
</div>

<div class="container">
    <div class="text-center">
        <h2>Zomato Results</h2>
    </div>
    <table class="table">
        <thead> 
            <tr>
                <th scope="col"> </th>
                <th scope="col">Restaurant</th>
                <th scope="col">Location</th>
            </tr>
        </thead>
        <th scope="row">
            <% @response["restaurants"].each do |restaurant| %>
                <tr>
                    <td><%= image_tag restaurant["restaurant"]["thumb"] %></td>
                    <td><strong><%= link_to restaurant["restaurant"]["name"], restaurant["restaurant"]["events_url"], target: :_blank %> (<%= restaurant["restaurant"]["user_rating"]["aggregate_rating"] %> out of 5)</strong></td>
                    <td><%= restaurant["restaurant"]["location"]["address"] %> </td>
                </tr>
            <% end %>
        </th>
    </table>
</div>
