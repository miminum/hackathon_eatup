<div class="container-background burger row">
  <div class="jumbotron form-container">
    <%= form_with(model: profile, local: true) do |form| %>
      <% if profile.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

          <ul>
          <% profile.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, id: :profile_first_name %>
      </div>

      <div class="field">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, id: :profile_last_name %>
      </div>

      <div class="field">
        <%= form.label :blurb %>
        <%= form.text_area :blurb, id: :profile_blurb %>
      </div>

      <div class="field">
        <%= form.label :profile_image %><br>
        <%= form.file_field :profile_image, id: :profile_profile_image %>
      </div>
      <div class="field">
          Remove attachment: <%= form.check_box :remove_profile_image %>
      </div>

      <div class="field">
        <%= form.label :gender %>
        <%= form.select :gender,  Profile::GENDER_TYPES %>
      </div>

      <div class="field">
        <%= form.label :city %>
        <%= form.text_field :city, id: :profile_city %>
      </div>

      <div class="field">
        <%= form.label :country_code %>
        <%= form.text_field :country_code, id: :profile_country_code %>
      </div>

      <%= form.hidden_field :user_id, :value => current_user.id %>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>